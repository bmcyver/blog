{
  "name": "blog",
  "type": "module",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro check && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "prettier": "prettier --write **/*.{mts,ts,tsx,css,astro} --ignore-path .gitignore",
    "post": "node ./scripts/create-post.mts",
